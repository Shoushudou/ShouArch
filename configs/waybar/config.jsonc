    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "format": "Ôúè {temperatureC}¬∞C",
    "critical-threshold": 80,
    "format-critical": "Ôúè {temperatureC}¬∞C ÔÅ±",
    "interval": 5
  },
  
