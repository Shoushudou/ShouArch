      "active": "Û∞ÆØ",
      "default": "Û∞ä†"
    }
  },
  
  // UPDATE: Ganti custom/media dengan custom/spotify yang lebih reliable
  "custom/spotify": {
    "format": "{} ÔßÜ",
    "max-length": 40,
    "exec": "playerctl -p spotify metadata --format '{{artist}} - {{title}}' 2>/dev/null || echo 'No music'",
    "exec-if": "playerctl -p spotify status 2>/dev/null",
    "on-click": "playerctl -p spotify play-pause",
    "on-scroll-up": "playerctl -p spotify next", 
    "on-scroll-down": "playerctl -p spotify previous",
    "escape": true,
    "restart-interval": 5
  },
  
  "cpu": {
    "format": "Û∞çõ {usage}%",
