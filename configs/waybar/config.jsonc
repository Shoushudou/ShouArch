{
  "layer": "top",
  "position": "top", 
  "height": 35,
  "spacing": 4,
  
  // UPDATE: Tambah module nightlight & spotify
  "modules-left": ["hyprland/workspaces", "custom/spotify", "cpu", "memory"],
  "modules-center": ["clock"],
  "modules-right": ["temperature", "battery", "pulseaudio", "network", "custom/nightlight", "tray"],
  
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{name}",
    "format-icons": {
      "1": "Û∞àπ",
      "2": "Û∞òö", 
      "3": "Û∞äñ",
      "4": "Û∞ôØ",
      "5": "Û∞ù∞",
